    <div class="container">
        <div class="row">
          <div class="col-md-3"></div>
            <div class="col-md-3">
                <h3>Burger List</h3> 
                  {{#each burgers}} 
                    {{#unless this.devoured}}
                <div>
                    <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='burgerAvailable'> {{this.id}}.  {{this.burger_name}}</button>
                    </form>
                </div>
                {{/unless}} {{/each}}
            </div>
            <div class="col-md-3">
                <h3>Eaten Burgers</h3>
                   {{#each burgers}} 
                     {{#if this.devoured}}
                <div class='burgerEaten'>
                    <div>
                       {{this.id}}. {{this.burger_name}}
                    </div>
                </div>
                {{/if}} {{/each}}
            </div>
            <div class="col-md-3"></div>
        </div>
        <!-- End 4th row -->
    </div>
